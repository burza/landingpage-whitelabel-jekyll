      css:
        body {
          font-size:16px;
        }
    | {% javascript application %}

    / Leaflet stuff
    | {% stylesheet leaflet %}
    /[if lt IE 8]
      | {% stylesheet leaflet_ie_lt8 %}
    | {% javascript map %}

  body id="{{ page.id }}" data-current-page="{{ page.id }}"
    / Wrap all page content here
    #wrap
      / Fixed navbar
      nav.navbar.navbar-fixed-top role="navigation"
        .container
          .navbar-header
            button.navbar-toggle.pull-right type="button" data-toggle="collapse" data-target="#main-nav"
              span.sr-only Toggle navigation
              i.fa.fa-reorder
            a.navbar-brand href="/"
              img src="/assets/img/brand.png" width="100%" height="30"
              | brand

          #main-nav.collapse.navbar-collapse.pull-right
            ul.nav.navbar-nav
              li
                a href='#' data-page-id="" Link #1
              li
                a href='#' data-page-id="" Link #2
              li
                a href="#" Link #3


      / Begin page content
      | {{ content }}

    #footer
      .container
        .row
          .col-xs-12.col-md-7.col-md-push-5
            .row
              .col-xs-4.col-md-4
                h5.text-muted HEADLINE 1
                ul.footer-links
                  li
                    a href= "/" data-page-id="welcome" Startseite
                  li
                    a href= "#" data-page-id="product" Seite
                  li
                    a href= "#" data-page-id="service" Seite
              .col-xs-4.col-md-4
                h5.text-muted HEADLINE 2
                ul.footer-links
                  li
                    a href= "/about/" data-page-id="about" About us
                  li
                    a href= "/imprint/" data-page-id="imprint" Imprint
                  li
                    a href= "/privacy/" data-page-id="privacy" Privacy Policy
              .col-xs-4.col-md-4
                h5.text-muted HEADLINE 3
                ul.footer-links
                  li
                    a href= "#" data-page-id="twitter"
                      i.fa.fa-twitter
                      | Twitter
                  li
                    a href= "#" data-page-id="github"
                      i.fa.fa-github-alt
                      | Github
                  li
                    a href= "#" data-page-id="email"
                      i.fa.fa-envelope
                      | E-Mail us


          .col-xs-12.col-md-5.col-md-pull-7.credit
            img.footer-brand src= "/assets/img/brand.png" width= "258" height="43"
